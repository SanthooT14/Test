{% extends 'base.html.twig' %}

{% block title %}Employees List{% endblock %}

{% block body %}
{% for message in app.flashes('message') %}
    <div class="alert alert-message">
        {{ message }}
    </div>
{% endfor %}

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>

        {% for employee in employee %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ employee.name }}</td>
                <td>{{ employee.address}}</td>
                <td>
                    <a href="{{ path('edit-employee', {id: employee.id}) }}" class="btn btn-success">Edit</a>
                    <a href="{{ path('delete-employee', {id: employee.id}) }}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}

  </tbody>
</table>
<div class="btn-group">
  <a href="{{ path('create-employee') }}" class="btn btn-primary mt-2" aria-current="page">Create Employee</a>
</div>

{% endblock %}
